{
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "./src/**/?(*.)+(spec|test).+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "moduleNameMapper": {
    "\\.(css|scss)$": "<rootDir>/node_modules/jest-css-modules"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "testEnvironment": "jest-environment-jsdom"
}
